<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ro.lbi.sqliggybank.client.view.dashboard.DashboardController">
    <right>
        <SplitPane prefHeight="720.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <ScrollPane prefHeight="720.0" prefWidth="300.0">
                <AnchorPane prefHeight="720.0" prefWidth="298.0">
                    <TreeView fx:id="groupsTreeView" focusTraversable="false" layoutX="80.0" layoutY="97.0"
                              prefHeight="720.0" prefWidth="298.0" AnchorPane.leftAnchor="0.0"
                              AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </ScrollPane>
        </SplitPane>
    </right>
    <center>
        <VBox fx:id="panelBox" onMouseClicked="#panelRequestFocus" prefHeight="200.0" prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                <Circle fx:id="profilePicture" fill="DODGERBLUE" radius="57.0" stroke="BLACK" strokeType="INSIDE">
                    <HBox.margin>
                        <Insets left="10.0" top="10.0"/>
                    </HBox.margin>
                </Circle>
                <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="340.0">
                    <Label fx:id="usernameLabel" prefHeight="38.0" prefWidth="340.0" text="Name">
                        <font>
                            <Font size="31.0"/>
                        </font>
                    </Label>
                    <Label fx:id="nameLabel" prefWidth="240.0" text="Label">
                        <font>
                            <Font size="17.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <HBox.margin>
                        <Insets left="15.0"/>
                    </HBox.margin>
                </VBox>
                <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchTextField" focusTraversable="false" promptText="search user">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </TextField>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#settingsButtonPressed">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@image/settings.png"/>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                    <padding>
                        <Insets top="1.0"/>
                    </padding>
                </Button>
                <Button alignment="CENTER" focusTraversable="false" mnemonicParsing="false"
                        onAction="#logoutButtonPressed" prefHeight="26.0" prefWidth="63.0" text="Logout">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
